{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "paths": {
      "@win-mngr/core": [
        "../../src/core"
      ],
      "@win-mngr/core/*": [
        "../../src/core/*"
      ],

      "@win-mngr/ui": [
        "../../src/ui"
      ],
      "@win-mngr/ui/*": [
        "../../src/ui/*"
      ],

      "@win-mngr/ui-libs": [
        "../../src/ui-libs"
      ],
      "@win-mngr/ui-libs/*": [
        "../../src/ui-libs/*"
      ],

      "@win-mngr/extensions": [
        "../../src/extensions"
      ],
      "@win-mngr/extensions/*": [
        "../../src/extensions/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
