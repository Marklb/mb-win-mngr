{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@win-mngr/core": [
        "./src/core"
      ],
      "@win-mngr/core/*": [
        "./src/core/*"
      ],

      "@win-mngr/ui": [
        "./src/ui"
      ],
      "@win-mngr/ui/*": [
        "./src/ui/*"
      ],

      "@win-mngr/extensions": [
        "./src/extensions"
      ],
      "@win-mngr/extensions/*": [
        "./src/extensions/*"
      ]
    }
  }
}
